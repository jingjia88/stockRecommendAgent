# Core AI API Keys
ANTHROPIC_API_KEY=your_claude_api_key_here

# Yahoo Finance (no API key required - free to use)

# Voice Services (Optional - can be mocked)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
# Webhook Base URL (must be publicly accessible for Twilio)
# For development with ngrok:
#   1. Install ngrok: https://ngrok.com
#   2. Run: ngrok http 8000
#   3. Copy the https URL (e.g., https://abc123.ngrok.io)
#   4. Set it below (without /webhooks suffix)
# For production: use your domain (e.g., https://your-domain.com)
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.io

# Manager Contact (for approval workflow)
MANAGER_PHONE=+1234567890
MANAGER_NAME=John Smith

# Application Settings
MAX_NEWS_ARTICLES=10
SENTIMENT_THRESHOLD=0.1
MOCK_VOICE_SERVICES=true  # Set to false to use real services
DEBUG=true